{
    "version": "2.0.0",
    "options": {
        "env": {
            "PATH": "${env:PATH}:$HOME/.cargo/bin"
        }
    },
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build"
        },
        {
            "type": "cargo",
            "command": "test",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "rust: cargo test"
        }
    ]
}
